# Flashcard Application Environment Variables
# Make a copy of this file named .env and fill in your values

# Flask application secret key (generate a secure random key for production)
SECRET_KEY=your-secure-random-key-here

# Database Configuration
# SQLite (default/fallback)
DATABASE_URL=sqlite:///flashcards.db

# Supabase Configuration
# Get these values from your Supabase project dashboard
SUPABASE_URL=https://your-project-id.supabase.co
SUPABASE_KEY=your-supabase-anon-key

# Spaced repetition API key (if using external services)
SPACED_REPETITION_API_KEY=your-api-key-here

# Maximum number of cards to review per session
MAX_CARDS_PER_SESSION=20

# Set to 'supabase' to use Supabase, or 'sqlite' to use SQLite
STORAGE_BACKEND=supabase
